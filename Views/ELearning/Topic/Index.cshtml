@* Views/Home/Index.cshtml *@
@{
    ViewData["Title"] = "Neksara - E-Learning Platform";
    ViewData["Description"] = "Belajar skill baru dengan kursus online berkualitas";
}

<!-- Search Section -->
<div class="search-section bg-white py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <br>
                <div class="search-wrapper shadow rounded-4 p-4 p-lg-5">
                    <!-- Search Bar -->
                    <div class="input-group input-group-lg mb-4">
                        <span class="input-group-text bg-light border-0 px-4">
                            <i class="bi bi-search text-muted fs-5"></i>
                        </span>
                        <input type="text" class="form-control border-0 bg-light py-3"
                            placeholder="Contoh: Web Development, Data Science, UI/UX Design..." readonly>
                        <button class="btn btn-primary px-4" type="button" disabled>
                            <i class="bi bi-search me-2"></i> Cari
                        </button>
                    </div>

                    <!-- Quick Categories -->
                    <div class="quick-categories">
                        <div class="d-flex flex-wrap gap-2">
                            <a href="#" class="btn btn-outline-primary rounded-pill px-3">
                                Web Development
                            </a>
                            <a href="#" class="btn btn-outline-primary rounded-pill px-3">
                                Data Science
                            </a>
                            <a href="#" class="btn btn-outline-primary rounded-pill px-3">
                                Mobile Apps
                            </a>
                            <a href="#" class="btn btn-outline-primary rounded-pill px-3">
                                UI/UX Design
                            </a>
                            <a href="#" class="btn btn-outline-primary rounded-pill px-3">
                                Cloud Computing
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">


    <!-- Topics Section -->
    <section id="topics" class="recent-blog-postst section light-background">
        <div class="container">
            
            <!-- Header Section -->
            <div class="row align-items-center mb-4">
                <!-- Bagian Kiri: Judul Topik -->
                <div class="col-lg-6 col-md-6">
                    <div class="section-header-left" data-aos="fade-up">
                        <h2>Topik</h2>
                    </div>
                </div>

                <!-- Bagian Kanan: Filter -->
                <div class="col-lg-6 col-md-8 offset-md-2">
                    <div class="topics-filter" data-aos="fade-up" data-aos-delay="100">
                        <div class="d-flex justify-content-end align-items-center gap-1">
                            <!-- Filter Populer -->
                            <div class="filter-item">
                                <button class="btn btn-sm filter-btn filter-popular active" type="button"
                                    data-filter="all">
                                    <i class="bi bi-fire me-1"></i>Populer
                                </button>
                            </div>

                            <!-- Filter Kategori (Dropdown) -->
                            <div class="filter-item">
                                <div class="dropdown">
                                    <button class="btn btn-sm filter-btn dropdown-toggle d-flex align-items-center"
                                        type="button" id="categoryFilter" data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                        <i class="bi bi-tag me-1"></i>Kategori
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="categoryFilter">
                                        <li><a class="dropdown-item category-filter active" href="#"
                                                data-category="all">Semua Kategori</a></li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li><a class="dropdown-item category-filter" href="#"
                                                data-category="design">Design</a></li>
                                        <li><a class="dropdown-item category-filter" href="#"
                                                data-category="development">Development</a></li>
                                        <li><a class="dropdown-item category-filter" href="#"
                                                data-category="business">Business</a></li>
                                        <li><a class="dropdown-item category-filter" href="#"
                                                data-category="marketing">Marketing</a></li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Filter A-Z (Dropdown) -->
                            <div class="filter-item">
                                <div class="dropdown">
                                    <button class="btn btn-sm filter-btn dropdown-toggle d-flex align-items-center"
                                        type="button" id="azFilter" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-sort-alpha-down me-1"></i>A-Z
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="azFilter">
                                        <li><a class="dropdown-item az-filter active" href="#" data-sort="all">Semua</a>
                                        </li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li><a class="dropdown-item az-filter" href="#" data-letter="A">A</a></li>
                                        <li><a class="dropdown-item az-filter" href="#" data-letter="B">B</a></li>
                                        <li><a class="dropdown-item az-filter" href="#" data-letter="C">C</a></li>
                                        <li><a class="dropdown-item az-filter" href="#" data-letter="D">D</a></li>
                                        <li><a class="dropdown-item az-filter" href="#" data-letter="E">E</a></li>
                                        <!-- Tambahkan huruf lain sesuai kebutuhan -->
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Topics Grid -->
            <div class="row g-4" id="topics-row">
                <!-- Topic Cards akan dimasukkan di sini -->
                @await Html.PartialAsync("_Topics")
            </div>
        </div>
    </section><!-- End Topics Section -->