@model List<ArchiveTopic>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>üóÑÔ∏è Arsip Topik</h3>

<form method="get" class="mb-3 d-flex gap-2">
    <select name="categoryId" class="form-control" style="max-width:250px">
        <option value="">-- Semua Kategori --</option>
        @foreach (var c in ViewBag.Categories)
        {
            <option value="@c.CategoryId"
                selected="@(ViewBag.CategoryId == c.CategoryId)">
                @c.CategoryName
            </option>
        }
    </select>
    <button class="btn btn-primary">Filter</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Topik</th>
            <th>Kategori</th>
            <th>Views</th>
            <th>Archived At</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.TopicName</td>
            <td>@t.Category?.CategoryName</td>
            <td>@t.ViewCount</td>
            <td>@t.ArchivedAt.ToString("dd MMM yyyy")</td>
            <td>
                <form asp-action="Restore" method="post">
                    <input type="hidden" name="id" value="@t.ArchiveTopicId" />
                    <button class="btn btn-success btn-sm">üîÑ Restore</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="?page=@i&categoryId=@ViewBag.CategoryId">@i</a>
            </li>
        }
    </ul>
</nav>
