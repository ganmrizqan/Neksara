@model List<Neksara.Models.Topic>
@{
    ViewData["Title"] = "E-Learning";
    var ratings = ViewBag.Ratings as Dictionary<int, double>;
}

<h2 class="mb-4">üìö E-Learning</h2>

<!-- ================= FILTER KATEGORI ================= -->
<div class="mb-4">
    <a href="/Learning" class="btn btn-outline-dark me-2 @(ViewBag.CurrentCategory == null ? "active" : "")">
        Semua
    </a>

    @foreach (var c in ViewBag.Category)
    {
        <a href="/Learning?categoryId=@c.CategoryId"
           class="btn btn-outline-primary me-2 @(ViewBag.CurrentCategory == c.CategoryId ? "active" : "")">
            @c.CategoryName
        </a>
    }
</div>

<!-- ================= CARD TOPIK ================= -->
<div class="row">
@foreach (var t in Model)
{
    var rating = ratings != null && ratings.ContainsKey(t.TopicId) ? ratings[t.TopicId] : 0.0;
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <img src="@t.TopicPicture" class="card-img-top">
            <div class="card-body">
                <span class="badge bg-secondary mb-2">
                    @t.Category?.CategoryName
                </span>

                <h5 class="card-title mt-2">
                    @t.TopicName
                </h5>

                <p class="card-text text-muted">
                    @(t.Description.Length > 120 ? t.Description.Substring(0,120) + "..." : t.Description)
                </p>

                <!-- ‚≠ê RATING -->
                <p class="mb-1">
                    <strong>@rating.ToString("0.0")</strong> / 5
                    <span class="text-warning ms-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Floor(rating))
                            {
                                <text>‚òÖ</text>
                            }
                            else
                            {
                                <text>‚òÜ</text>
                            }
                        }
                    </span>
                </p>
                <!-- üìÖ PUBLISH DATE -->
                <p class="text-muted mb-0">
                   Date publish: @(t.PublishedAt.HasValue ? t.PublishedAt.Value.ToString("dd MMM yyyy") : "-")
                </p>

            <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
                <a href="/Learning/Detail/@t.TopicId" class="btn btn-sm btn-primary">
                    üìñ Pelajari
                </a>
                <span class="text-muted">
                    üëÅ @t.ViewCount
                </span>
            </div>
            </div>
            </div>
        </div>
}
</div>

<!-- ================= PAGINATION ================= -->
<nav class="mt-4">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link"
                   href="/Learning?page=@i&categoryId=@ViewBag.CurrentCategory">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>
<!-- ================= END PAGINATION ================= -->
