@using Neksara.Models
@model List<AdminFeedbackVM>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var testimonis = ViewBag.Testimonies as List<Testimoni>;
}
<h3>Testimoni</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nama</th>
            <th>Pekerjaan</th>
            <th>Comment</th>
            <th>Rating</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
    @foreach (var f in Model)
    {
        <tr>
            <td>@(string.IsNullOrEmpty(f.Name) ? "Anon" : f.Name)</td>
            <td>@f.Role</td>
            <td>@f.Description</td>

            <td class="text-warning">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= f.Rating) { <text>★</text> }
                    else { <text>☆</text> }
                }
            </td>

            <td>
                <form asp-action="Approve" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@f.FeedbackId" />
                    <button class="btn btn-success btn-sm">Approve</button>
                </form>

                <form asp-action="Hide" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@f.FeedbackId" />
                    <button class="btn btn-danger btn-sm">Hide</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link"
                   href="?page=@i&categoryId=@ViewBag.CategoryId">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>
