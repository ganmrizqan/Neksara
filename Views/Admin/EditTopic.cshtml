@model Neksara.Models.Topic
@{
    ViewData["Title"] = "Edit Topik";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mb-4">‚úèÔ∏è Edit Topik</h3>

<form asp-controller="Admin"
      asp-action="EditTopic"
      method="post"
      enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="TopicId" />
    <input type="hidden" name="ExistingPicture" value="@Model.TopicPicture" />

    <div class="mb-3">
        <label class="form-label fw-bold">Kategori</label>
        <select asp-for="CategoryId" class="form-select">
            <option value="">-- Pilih Kategori --</option>
            @foreach (var c in ViewBag.Categories)
            {
                <option value="@c.CategoryId"
                        selected="@(c.CategoryId == Model.CategoryId)">
                    @c.CategoryName
                </option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Nama Topik</label>
        <input asp-for="TopicName" class="form-control" />
        <span asp-validation-for="TopicName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Isi Materi</label>
        <textarea asp-for="Description"
                  rows="5"
                  class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="fw-bold">Picture Topic</label>
        <input type="file" name="image" class="form-control" />

        @if (!string.IsNullOrEmpty(Model.TopicPicture))
        {
            <div class="mt-2">
                <small class="text-muted">Gambar saat ini:</small><br />
                <img src="@Model.TopicPicture" width="120" class="rounded shadow-sm" />
            </div>
        }
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Video URL</label>
        <input asp-for="VideoUrl" class="form-control" />
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-warning">
            üíæ Update
        </button>
        <a href="/Admin/TopicIndex" class="btn btn-secondary">
            ‚ùå Batal
        </a>
    </div>
</form>
