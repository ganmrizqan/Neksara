@model Neksara.Models.Category
@{
    ViewData["Title"] = "Edit Kategori";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mb-4">‚úèÔ∏è Edit Kategori</h3>

<form asp-controller="Admin"asp-action="EditCategory"method="post"enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    
    <input type="hidden" asp-for="CategoryId" />

    <div class="mb-3">
        <label class="form-label fw-bold">Nama Kategori</label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Deskripsi</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
<div class="mb-3">
        <label class="fw-bold">Picture Topic</label>
        <input type="file" name="image" class="form-control" />

        @if (!string.IsNullOrEmpty(Model.CategoryPicture))
        {
            <div class="mt-2">
                <small class="text-muted">Gambar saat ini:</small><br />
                <img src="@Model.CategoryPicture" width="120" class="rounded shadow-sm" />
            </div>
        }
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-warning">
            üíæ Update
        </button>
        <a href="/Admin/CategoryIndex" class="btn btn-secondary">
            ‚ùå Batal
        </a>
    </div>
</form>
