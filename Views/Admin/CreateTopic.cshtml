@model Neksara.Models.Topic
@{
    ViewData["Title"] = "Tambah Topik";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mb-4">‚ûï Tambah Topik</h3>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-controller="Admin"
      asp-action="CreateTopic"
      method="post"
      enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label fw-bold">Kategori</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">-- Pilih Kategori --</option>
            @foreach (var c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Nama Topik</label>
        <input asp-for="TopicName" class="form-control"
               placeholder="Contoh: ASP.NET MVC Dasar" />
        <span asp-validation-for="TopicName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Isi Materi</label>
        <textarea asp-for="Description"
                  rows="5"
                  class="form-control"
                  placeholder="Tuliskan isi materi topik..."></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="fw-bold">Picture Topic</label>
        <input type="file" name="image" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Video URL</label>
        <input asp-for="VideoUrl"
               class="form-control"
               placeholder="https://youtube.com/..." />
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">
            üíæ Simpan
        </button>
        <a href="/Admin/TopicIndex" class="btn btn-secondary">
            ‚¨ÖÔ∏è Kembali
        </a>
    </div>
</form>
