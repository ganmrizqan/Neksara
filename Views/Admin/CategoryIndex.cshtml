@model List<Neksara.ViewModels.CategoryIndexVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="mb-3">Daftar Kategori</h4>

<form method="get" class="mb-3 d-flex gap-2">
    <input name="search"
           class="form-control"
           placeholder="Cari Kategori..."
           value="@ViewBag.CurrentSearch" />

    <button class="btn btn-primary">Cari</button>

    <a href="/Admin/CreateCategory" class="btn btn-dark">
        + Tambah Kategori
    </a>
</form>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>Kategori</th>
            <th>Topik</th>
            <th>Total Views</th>
            <th style="width:200px">Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CategoryName</td>
                <td>
                    <span class="badge bg-info">
                        @c.TotalTopics Topik
                    </span>
                </td>
                <td>@c.TotalViews Views</td>
                <td class="d-flex gap-1">
                    <a href="/Admin/CategoryDetail/@c.CategoryId"
                       class="btn btn-sm btn-primary">
                        Detail
                    </a>

                    <a href="/Admin/EditCategory/@c.CategoryId"
                       class="btn btn-sm btn-warning">
                        Edit
                    </a>

                    <form asp-controller="Admin"
                          asp-action="DeleteCategory"
                          asp-route-id="@c.CategoryId"
                          method="post"
                          class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="btn btn-sm btn-danger"
                                onclick="return confirm('Yakin hapus kategori ini?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- PAGINATION -->
<nav class="mt-4">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link"
                   href="?page=@i&search=@ViewBag.CurrentSearch">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>
