<!DOCTYPE html>
<html>
<head>
    <title>Admin Panel - Neksara</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>

<div class="d-flex">
    <!-- SIDEBAR -->
    <aside style="width:240px;background:#0783e2;min-height:100vh;">
        <div class="p-3 text-white fw-bold">Manage</div>
        <ul class="nav flex-column px-2">
            <li class="nav-item">
                <a class="nav-link text-white" href="/Home/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/Admin/CategoryIndex">Kategori</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/Admin/TopicIndex">Topik</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/AdminFeedback/Index">Feedback</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/AdminArchive/Index">Archive</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/Auth/Logout">Logout</a>
            </li>
        </ul>
    </aside>

    <!-- MAIN -->
    <main class="flex-fill">
        <header class="p-3 bg-teal text-white d-flex justify-content-between">
            <span>Neksara Admin Panel</span>
            <span>@User.Identity.Name</span>
        </header>

        <div class="p-4">
            @RenderBody()
        </div>
    </main>
</div>

</body>
</html>
