@* Views/Shared/_HeroSection.cshtml *@

<!-- Hero Section -->
<section id="hero" class="hero section dark-background" data-aos="fade-up">
    <div class="container">
        <div class="row gy-4">
            <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center" data-aos="zoom-out">
                <div class="hero-tagline">
                    <span class="hero-subtitle">Learn Without Limits</span>
                </div>
                <h1>Learn a New Skill<br><span class="highlight">Everyday, Anytime, and Anywhere.</span></h1>
                <p class="hero-description">
                    1000+ Courses covering all tech domains for you to learn and explore new opportunities. 
                    Learn from Industry Experts and become an Expert in your field.
                </p>
                <div class="hero-cta">
                    <a href="#categories" class="btn-get-started">Learn Now</a>
                    <a href="https://www.youtube.com/watch?v=example" 
                       class="glightbox btn-watch-video d-flex align-items-center">
                        <i class="bi bi-play-circle"></i>
                        <span>Watch Intro</span>
                    </a>
                </div>
                
                <!-- Stats -->
                <div class="hero-stats mt-5">
                    <div class="row">
