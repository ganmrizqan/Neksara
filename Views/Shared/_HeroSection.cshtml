                            <div class="stat-item">
                                <h3>1000+</h3>
                                <p>Courses to Choose from</p>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-item">
                                <h3>200+</h3>
                                <p>Employees Trained</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="zoom-out" data-aos-delay="200">
                <img src="~/assets/img/illustration/illustration-10.webp" class="img-fluid animated" alt="Online Learning">
            </div>
        </div>
    </div>
</section>
<!-- /Hero Section -->