@model Neksara.ViewModels.TopicDetailVM

<div class="modal-header">
    <h5 class="modal-title">üìò Detail Topik</h5>
    <button type="button"
            class="btn-close"
            data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">

@if (!string.IsNullOrEmpty(Model.TopicPicture))
{
    <img src="@Model.TopicPicture"
         class="img-fluid rounded mb-3"
         style="max-height:260px; object-fit:cover;" />
}

<table class="table table-bordered">
    <tr>
        <th width="180">Nama Topik</th>
        <td>@Model.TopicName</td>
    </tr>
    <tr>
        <th>Kategori</th>
        <td>@Model.CategoryName</td>
    </tr>
    <tr>
        <th>View Count</th>
        <td>@Model.ViewCount</td>
    </tr>
    <tr>
        <th>Dibuat</th>
        <td>@Model.CreatedAt.ToString("dd MMM yyyy")</td>
    </tr>
    <tr>
        <th>Dipublish</th>
        <td>@(Model.UpdatedAt?.ToString("dd MMM yyyy") ?? "-")</td>
    </tr>
</table>

<hr />

<h6>üìù Deskripsi</h6>
<div class="border rounded p-3 bg-light">
    @Html.Raw(Model.Description)
</div>

@if (!string.IsNullOrEmpty(Model.VideoUrl))
{
    <hr />
    <h6>üé¨ Video</h6>
    <a href="@Model.VideoUrl" target="_blank">
        @Model.VideoUrl
    </a>
}

</div>
