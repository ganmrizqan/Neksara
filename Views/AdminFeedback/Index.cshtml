@using Neksara.Models
@model List<AdminFeedbackVM>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var categories = ViewBag.Categories as List<Category>;
}
<h3>Feedback Topik</h3>

<form method="get" class="mb-3 d-flex gap-2">
   <select name="categoryId" class="form-control" style="max-width:250px">
    <option value="">-- Semua Kategori --</option>

    @if (categories != null)
    {
        foreach (var c in categories)
        {
            <option value="@c.CategoryId"
            selected="@(ViewBag.CategoryId == c.CategoryId ? "selected" : null)">
              @c.CategoryName
            </option>

        }
    }
        </select>

    <button class="btn btn-primary">Filter</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nama</th>
            <th>Pekerjaan</th>
            <th>Topik</th>
            <th>Kategori</th>
            <th>Comment</th>
            <th>Rating</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
    @foreach (var f in Model)
    {
        <tr>
            <td>@(string.IsNullOrEmpty(f.Name) ? "Anon" : f.Name)</td>
            <td>@f.Role</td>
            <td>@f.TopicName</td>
            <td>@f.CategoryName</td>

            <td>@f.Description</td>

            <td class="text-warning">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= f.Rating) { <text>★</text> }
                    else { <text>☆</text> }
                }
            </td>

            <td>
                <form asp-action="Approve" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@f.FeedbackId" />
                    <button class="btn btn-success btn-sm">Approve</button>
                </form>

                <form asp-action="Hide" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@f.FeedbackId" />
                    <button class="btn btn-danger btn-sm">Hide</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link"
                   href="?page=@i&categoryId=@ViewBag.CategoryId">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>
